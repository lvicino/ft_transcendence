
services:
  auth-api:
    build:
      target: development
    volumes:
      - /usr/src/app/node_modules
      - ./auth-api:/usr/src/app

  game-api:
    build:
      target: development
    volumes:
      - ./game-api:/usr/src/app
      - /usr/src/app/node_modules

  traefik:
    command:
      - "--providers.docker=true"
      - "--entrypoints.websecure.address=:443"
      - "--serverstransport.insecureSkipVerify=true"
      - "--api.insecure=true"
    ports:
      - 8080:8080

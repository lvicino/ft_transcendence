
services:
  auth-api:
    build:
      target: development
    volumes:
      - /usr/src/app/node_modules
      - ./auth-api:/usr/src/app
    ports:
      - "3001:3000"

  game-api:
    build:
      target: development
    volumes:
      - ./game-api:/usr/src/app
      - /usr/src/app/node_modules
    ports:
      - "3002:3000"

  whoami:
    image: traefik/whoami
    labels:
      - "traefik.http.routers.whoami.rule=PathPrefix(`/whoami`)"
